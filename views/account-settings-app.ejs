<section class="app-settings-page">
    <h1>App settings</h1>
    <p>Choose your preferred language for the app interface. Communication with others remains in English.</p>
    <div class="searchbar dropdown">
        <select name="Interface language" id="">
            <option value="" disabled selected hidden>Interface language</option>
            <option value="">English</option>
            <option value="">Dutch</option>
            <option value="">Spanish</option>
            <option value="">French</option>
            <option value="">German</option>
            <option value="">Italian</option>
            <option value="">Arabian</option>
            <option value="">Turkish</option>
            <option value="">Ukranian</option>
        </select>
    </div>
    <h2>Notification settings</h2>
    <div class="notification-row">
        <p>Chat messages</p>
        <label class="switch">
            <input type="checkbox" checked>
            <span class="slider round"></span>
        </label>
    </div>
    <div class="notification-row">
        <p>Your activity updates</p>
        <label class="switch">
            <input type="checkbox" checked>
            <span class="slider round"></span>
        </label>
    </div>
    <div class="notification-row">
        <p>Recommended activities</p>
        <label class="switch">
            <input type="checkbox" checked>
            <span class="slider round"></span>
        </label>
    </div>
    <div class="bottom-buttons">
        <a href="/account/settings" class="cancel-btn">Back</a>
        <a href="/account" class="post-event-btn">Save</a>
    </div>
</section>